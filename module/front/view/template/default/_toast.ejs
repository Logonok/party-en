<template id="toast">
    <div class="page">

        <breadcrumbs>
            <template #path>
                <li class="breadcrumb-item">
                    <a @click.prevent="toMain" href="#">Main</a>
                </li>
                <li class="breadcrumb-item">Toast</li>
            </template>
        </breadcrumbs>

        <div class="loadable-container">
            <template v-if="!loading && id">

                <h1>{{title}}</h1>

                <div class="toast-content">
                    {{content}}
                    <div class="toast-author">
                        Author:
                        <a @click.prevent="toMember(author)" href="#">{{authorName}}</a>
                    </div>
                </div>

                <h3 class="block-title">Comments</h3>

                <comments :toast="toast" ref="comments"></comments>

            </template>

            <div v-if="loading" class="loader">
                <i class="fa fa-spinner fa-spin"></i>
            </div>
        </div>
    </div>
</template>